<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/congrats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congrats...\nYour Room\nSuccesfully Booked"
        android:textColor="#2B92D5"
        android:textSize="34sp"
        android:textStyle="bold"
        android:layout_marginTop="45dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wehope"
        app:layout_constraintTop_toBottomOf="@id/congrats"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="We hope you enjoy your\nroom and your holiday\n\nHave fun Name"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/gambarFinal"
        app:layout_constraintTop_toBottomOf="@id/wehope"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/img_final"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/okay"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginBottom="-7dp"
        android:backgroundTint="#22597D"
        android:text="OKAY"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>